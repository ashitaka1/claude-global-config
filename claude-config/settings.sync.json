{
  "apiKeyHelper": "~/.claude/scripts/api_key_helper.sh",
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git ls-files:*)",
      "Bash(git rev-parse:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git add:*)",
      "Bash(git stash:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git remote:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git init:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(pwd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(ln:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(diff:*)",
      "Bash(patch:*)",
      "Bash(go *:*)",
      "Bash(npm *:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(python*:*)",
      "Bash(pip*:*)",
      "Bash(poetry:*)",
      "Bash(pytest:*)",
      "Bash(cargo *:*)",
      "Bash(rustc:*)",
      "Bash(rustup:*)",
      "Bash(swift*:*)",
      "Bash(xcodebuild:*)",
      "Bash(make*:*)",
      "Bash(docker *:*)",
      "Bash(docker-compose:*)",
      "Bash(kubectl *:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(rsync:*)",
      "Bash(tar:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(date:*)",
      "Bash(cal:*)",
      "Bash(ps:*)",
      "Bash(top:*)",
      "Bash(htop:*)",
      "Bash(gh:*)",
      "Bash(code:*)",
      "Bash(vim:*)",
      "Bash(nano:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(base64:*)",
      "Bash(openssl:*)",
      "Bash(./sync.sh:*)",
      "Skill(*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$(git branch --show-current 2>/dev/null)\" = \"main\" ]; then echo 'BLOCKED: You tried to work on main. Use proper development protocol.' && exit 2; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "commit-commands@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  }
}
